<div class="home-banner">
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>
<div class="container mb-5">
  <h1 class="text-center my-3">All Cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: "text-decoration-none text-body" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.pixabay.com/photo/2017/01/11/11/02/cocktail-1971488_1280.jpg)">
            <%= cocktail.name %>
          </div>
      <% end %>
    <% end %>
  </div>
</div>

