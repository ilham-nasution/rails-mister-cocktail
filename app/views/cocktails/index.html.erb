<div class="home-banner">
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>
<div class="container mb-5">
  <h1 class="text-center my-3">All Cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: "text-decoration-none text-body" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=
          if cocktail.photo.file
            cl_image_path cocktail.photo, height: 500, width: 500, crop: :fill
          end
           %>')">
            <%= cocktail.name %>
          </div>
      <% end %>
    <% end %>
  </div>
</div>

