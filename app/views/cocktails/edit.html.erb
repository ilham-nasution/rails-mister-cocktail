<h1>Edit your cocktail</h1>


<h2>Ingredient:</h2>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> | <%= dose.ingredient.name %></p>
    <%= link_to dose_path(dose), method: :delete do %>
  <p>remove</p>
  <% end %>
<% end %>

<%= link_to "add a new ingredient", new_cocktail_dose_path(@cocktail)  %>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>

