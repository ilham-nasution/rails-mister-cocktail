<div class="container mt-5" style="margin-bottom: 250px">
<h1 class="text-center">Create a new cocktail</h1>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Create Cocktail", class: "btn btn-primary" %>
<% end %>
</div>

